                </Grid.ColumnDefinitions>
                <Button
                            Name="button_add"
                            Grid.Column="0" Grid.Row="1"
                            Background="#609194"
    Style="{StaticResource MaterialDesignRaisedLightButton}"
    Height="40"
    Width="100"
>
                    Thêm
                </Button>
                <Button
                            Name="button_update"
                            Grid.Column="1" Grid.Row="1"
                            Background="#609194"
    Style="{StaticResource MaterialDesignRaisedLightButton}"
    Height="40"
    Width="100">
                    Làm mới
                </Button>
                <Button
                            Name="button_delete"
