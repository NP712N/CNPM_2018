                            Name="button_add"
                            Grid.Column="0" Grid.Row="1"
                            Background="#609194"
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            Height="40"
                            Width="100"
                            Foreground="White"
                            FontSize="18"
                            BorderBrush="Gray"
                            VerticalAlignment="Center" Click="button_add_Click">
                            Thêm
                        </Button>
                        <Button
                            Name="button_update"
                            Grid.Column="1" Grid.Row="1"
                            Background="#609194"
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            Height="40"
                            Width="100"
                            Foreground="White"
                            FontSize="18"
                            BorderBrush="Gray"
                            VerticalAlignment="Center" Click="button_update_Click">
                            Sửa
                        </Button>
                        <Button
                            Name="btn_delete"
                            Grid.Column="2" Grid.Row="1"
                            Background="#609194"
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            Height="40" Width="100"
                            Foreground="White"
                            FontSize="18"
                            BorderBrush="Gray"
                            VerticalAlignment="Center" Click="btn_delete_Click">
                            Xóa
                        </Button>
                    </Grid>

                </Grid>
                <materialDesign:Card Grid.Row="2" Height="240" Width="770">
                    <DataGrid
                        
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        Name="ds_daily"
                        AutoGenerateColumns="False"
                        Width="auto" SelectionChanged="ds_daily_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Binding="{Binding MaDaiLy}"
                                Header="Mã đại lý"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" />

                            <materialDesign:MaterialDataGridTextColumn
                                Binding="{Binding MaHopDong}"
                                Header="Mã hợp đồng"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}" />
                            <materialDesign:MaterialDataGridTextColumn
                            Binding="{Binding NgayLap}" 
                            Header="Ngày lập"
                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}" />
                            <materialDesign:MaterialDataGridTextColumn
                            Binding="{Binding CMND}"
                            Header="CMND"
                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                            </materialDesign:MaterialDataGridTextColumn>
                            <materialDesign:MaterialDataGridTextColumn
                            Binding="{Binding HoTenChuDaiLy}"
                            Header="Họ tên chủ đại lý"
                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                            </materialDesign:MaterialDataGridTextColumn>
                            <materialDesign:MaterialDataGridTextColumn
                            Binding="{Binding NgaySinh}"
                            Header="Ngày sinh"
                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                            </materialDesign:MaterialDataGridTextColumn>
                            <materialDesign:MaterialDataGridTextColumn
                            Binding="{Binding CapDaiLy}"
                            Header="Cấp đại lý"
                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                            </materialDesign:MaterialDataGridTextColumn>
                            <materialDesign:MaterialDataGridTextColumn
                            Binding="{Binding TenDaiLy}"
                            Header="Tên đại lý"
                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                            </materialDesign:MaterialDataGridTextColumn>
                            <materialDesign:MaterialDataGridTextColumn
                            Binding="{Binding HoTenChuDaiLy}"
                            Header="Họ tên chủ đại lý"
                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                            </materialDesign:MaterialDataGridTextColumn>
                            <materialDesign:MaterialDataGridTextColumn
                            Binding="{Binding NoiDung}"
                            Header="Nội dung"
                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                            </materialDesign:MaterialDataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
