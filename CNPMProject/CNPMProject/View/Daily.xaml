                    materialDesign:ColorZoneAssist.Mode="Dark"
                    Height="230" Width="780"
                    VerticalAlignment="Center"
    UseLayoutRounding="True"
    SnapsToDevicePixels="True">
                        <materialDesign:Card Height="180">
                            <Grid>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
