    Style="{StaticResource MaterialDesignRaisedLightButton}"
    Height="40"
    Width="100"
                            VerticalAlignment="Top" Click="button_update_Click">
                            Sửa
                        </Button>
                        <Button
                            Name="button_delete"
                            Command="{Binding DeleteCommand}"
                            Grid.Column="2" Grid.Row="1"
                            Background="#609194"
    Style="{StaticResource MaterialDesignRaisedLightButton}"
    Height="40"
    Width="100"
                            VerticalAlignment="Top">
                            Xóa
                        </Button>
                    </Grid>
                    
                </Grid>
                <materialDesign:Card Grid.Row="1" Height="350" Width="770">
                    <DataGrid                       
  ItemsSource="{Binding Path=DAILYS}"
  CanUserSortColumns="True"
  CanUserAddRows="False" 
                        SelectedItem="{Binding SelectedDAILYS}"
                       
                        Name="DaiLyViewControl" Loaded="DaiLy_Loaded"
  AutoGenerateColumns="False"
                Width="auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn
      Binding="{Binding Path=MaDaiLy,Mode=OneWay}"
      Header="Mã đại lý"
      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" />
                        <materialDesign:MaterialDataGridTextColumn
      Binding="{Binding Path=MaHopDong,Mode=OneWay}"
      Header="Mã hợp đồng"
      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}" />
                        <materialDesign:MaterialDataGridTextColumn
      Binding="{Binding Path=NgayLap,Mode=OneWay}" 
      Header="Ngày lập"
      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}" />
                        <materialDesign:MaterialDataGridTextColumn
      Binding="{Binding Path=CMND,Mode=OneWay}"
      Header="CMND"
      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                        </materialDesign:MaterialDataGridTextColumn>
                        <materialDesign:MaterialDataGridTextColumn
      Binding="{Binding Path=HoTenChuDaiLy,Mode=OneWay}"
      Header="Họ tên chủ đại lý"
      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                        </materialDesign:MaterialDataGridTextColumn>
                        <materialDesign:MaterialDataGridTextColumn
      Binding="{Binding Path=NgaySinh,Mode=OneWay}"
      Header="Ngày sinh"
      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                        </materialDesign:MaterialDataGridTextColumn>
                        <materialDesign:MaterialDataGridTextColumn
      Binding="{Binding Path=CapDaiLy,Mode=OneWay}"
      Header="Cấp đại lý"
      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                        </materialDesign:MaterialDataGridTextColumn>
                        <materialDesign:MaterialDataGridTextColumn
      Binding="{Binding Path=TenDaiLy,Mode=OneWay}"
      Header="Tên đại lý"
      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                        </materialDesign:MaterialDataGridTextColumn>
                        <materialDesign:MaterialDataGridTextColumn
