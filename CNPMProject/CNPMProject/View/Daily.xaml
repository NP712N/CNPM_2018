                                <materialDesign:ColorZone
                                    VerticalAlignment="Center"                            
                                    Padding="8 4 8 4"
                                    CornerRadius="2"
                                    Panel.ZIndex="1"
                                    Margin="16 0 0 0"
                                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                    Grid.Column="1"
                                    >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition
                                                Width="Auto" />
                                            <ColumnDefinition
                                                Width="*" />
                                            <ColumnDefinition
                                                Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            Name="button_search"
                                            Style="{DynamicResource MaterialDesignToolButton}" Height="Auto" Click="button_search_Click">
                                            <materialDesign:PackIcon
                                                
                                                Kind="Magnify"
                                                />
                                        </Button>

                                        <TextBox 
                                            Grid.Column="1"
                                            Name="txtsearchDaiLy"
                                            Margin="8 0 0 0"
                                            FontSize="16"
                                            materialDesign:HintAssist.Hint="Search"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            BorderThickness="0"
                                            MinWidth="200"
                                            VerticalAlignment="Center" />
                                        <Button
                                            Name="button_refresh"
                                            Style="{DynamicResource MaterialDesignToolButton}" Height="Auto" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Click="button_refresh_Click">
                                            <materialDesign:PackIcon
                                                
                                                Kind="Reload"
                                                />
                                        </Button>
                                    </Grid>
                                </materialDesign:ColorZone>
                            </StackPanel>
                        </DockPanel>
